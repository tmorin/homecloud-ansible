NEXTCLOUD_ADMIN_USER={{ stack_nextcloud_server_admin_user }}
NEXTCLOUD_ADMIN_PASSWORD={{ stack_nextcloud_server_admin_password }}
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud {{ stack_nextcloud_server_trusted_domains }}

REDIS_HOST=cache

# (not set by default) hostname of the SMTP server
SMTP_HOST={{ stack_nextcloud_server_smtp_host }}
# (empty by default) set to 'ssl' to use SSL on the connection.
SMTP_SECURE={{ stack_nextcloud_server_smtp_secure }}
# (default: 465 for SSL and 25 for non-secure connection) Optional port for SMTP connection.
SMTP_PORT={{ stack_nextcloud_server_smtp_port }}
# (default: LOGIN) The method used for authentication.
SMTP_AUTHTYPE={{ stack_nextcloud_server_smtp_authtype }}
# (empty by default) Username for the authentication.
SMTP_NAME={{ stack_nextcloud_server_smtp_name }}
# (empty by default) Password for the authentication.
SMTP_PASSWORD={{ stack_nextcloud_server_smtp_password }}
# (not set by default) Use this address for the 'from' field in the mail envelopes sent by Nextcloud.
MAIL_FROM_ADDRESS={{ stack_nextcloud_server_mail_from }}
# (not set by default) Set a different domain for the emails than the domain where Nextcloud is installed.
MAIL_DOMAIN={{ stack_nextcloud_server_mail_domain }}
