#!/usr/bin/env bash

set -xeo pipefail

docker pull {{ action_restore_duplicity_image }}

docker run --rm --env-file restore.env \
-v "{{ action_restore_backup_volume_name }}:/mnt/destination:ro" \
{% for docker_volume in action_restore_volume_names_to_restore %}
-v "{{ docker_volume }}:/mnt/{{ docker_volume }}" \
{% endfor %}
{{ action_restore_duplicity_image }} execute-restore
