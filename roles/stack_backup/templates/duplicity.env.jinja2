PASSPHRASE={{ backup_passphrase }}

{% for docker_volume in backup_source_volumes %}
TASK_backup-{{ docker_volume | replace('_', '-') | upper }}_PERIODICITY=daily
TASK_backup-{{ docker_volume | replace('_', '-') | upper }}_PREPARE=mkdir -p /mnt/backup/{{ docker_volume }}
TASK_backup-{{ docker_volume | replace('_', '-') | upper }}_LOAD=duplicity /mnt/{{ docker_volume }} file:///mnt/destination/{{ docker_volume }}
{% endfor %}
